    <ThingDef ParentName="ApparelNoQualityBase">
        <defName>GraemeApparel_PsychicShockLance</defName>
        <label>Enhanced Shock Lance</label>
        <description>An enhanced psychic effector. It shocks the target's mind with chaotic images, blocking coherent perception and dropping him into a state of psychic shock. There is a risk of brain damage. It has a long range, but requires line of sight.</description>
        <graphicData>
            <texPath>Things/Item/Artifact/PsychicShockLance</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <techLevel>Archotech</techLevel>
        <tradeTags>
            <li>Artifact</li>
        </tradeTags>
        <thingSetMakerTags>
            <li>RewardStandardHighFreq</li>
        </thingSetMakerTags>
        <statBases>
            <Mass>0.5</Mass>
            <EquipDelay>2</EquipDelay>
            <MarketValue>5500</MarketValue>
            <MaxHitPoints>80</MaxHitPoints>
            <WorkToMake>24000</WorkToMake>
        </statBases>
        <costList>
            <Steel>20</Steel>
            <Gold>20</Gold>
            <ComponentIndustrial>6</ComponentIndustrial>
            <ComponentSpacer>1</ComponentSpacer>
        </costList>
        <tickerType>Normal</tickerType>
        <thingCategories>
            <li>ApparelUtility</li>
        </thingCategories>
        <apparel>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <scoreOffset>4</scoreOffset>
            <careIfWornByCorpse>false</careIfWornByCorpse>
            <careIfDamaged>false</careIfDamaged>
            <ignoredByNonViolent>true</ignoredByNonViolent>
            <wearPerDay>0</wearPerDay>
            <bodyPartGroups>
                <li>Waist</li>
            </bodyPartGroups>
            <layers>
                <li>Belt</li>
            </layers>
        </apparel>
        <resourceReadoutPriority>Middle</resourceReadoutPriority>
        <tradeNeverStack>true</tradeNeverStack>
        <smeltable>false</smeltable>
        <burnableByRecipe>false</burnableByRecipe>
        <drawGUIOverlay>false</drawGUIOverlay>
        <relicChance>3</relicChance>
        <verbs>
            <li>
                <verbClass>Verb_CastTargetEffect</verbClass>
                <label>psychic shock lance</label>
                <hasStandardCommand>true</hasStandardCommand>
                <targetable>true</targetable>
                <onlyManualCast>False</onlyManualCast>
                <range>120</range>
                <warmupTime>0.5</warmupTime>
                <targetParams>
                    <canTargetBuildings>false</canTargetBuildings>
                    <onlyTargetPsychicSensitive>true</onlyTargetPsychicSensitive>
                    <neverTargetIncapacitated>true</neverTargetIncapacitated>
                </targetParams>
                <soundCast>PsychicShockLanceCast</soundCast>
            </li>
        </verbs>
        <comps>
            <li Class="CompProperties_Reloadable">
                <maxCharges>20</maxCharges>
                <destroyOnEmpty>true</destroyOnEmpty>
                <hotKey>Misc4</hotKey>
                <chargeNoun>charge</chargeNoun>
                <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
            </li>
            <li>
                <compClass>CompTargetEffect_PsychicShock</compClass>
            </li>
            <li Class="CompProperties_TargetEffect_BrainDamageChance">
                <brainDamageChance>0.1</brainDamageChance>
            </li>
            <li Class="CompProperties_TargetEffect_FleckOnTarget">
                <fleckDef>PsycastPsychicEffect</fleckDef>
            </li>
            <li Class="CompProperties_TargetEffect_FleckConnecting">
                <fleckDef>PsycastPsychicLine</fleckDef>
            </li>
            <li Class="CompProperties_Styleable"></li>
        </comps>
